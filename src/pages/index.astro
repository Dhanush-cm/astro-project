---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
  <div class="container">
    <div class="background-image"></div>
    <div class="triangle-layer triangle1"></div>
    <div class="triangle-layer triangle2"></div>
    <div class="triangle-layer triangle3"></div>
  </div>

  <style>
    .container {
      position:relative;
      width: 100%;
      height: 250px;
      background-color: white;
      overflow: hidden;
    }

    /* Background Image */
    .background-image {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: url('/images/background.png');
      background-size: cover;
      background-position: center;
      opacity: 0.2; /* Adjust for similar transparency effect */
    }

    /* Triangle Layers */
    .triangle-layer {
      position: absolute;
      width: 0;
      height: 0;
      border-style: solid;
    }

    /* Individual Triangle Layers with Specific Colors */
    .triangle1 {
      top: 60px;
      left: 0;
      border-width: 60px 100vw 0 0;
      border-color: #66c3ba transparent transparent transparent;
    }

    .triangle2 {
      top: 80px;
      left: 0;
      border-width: 80px 100vw 0 0;
      border-color: #f2926f transparent transparent transparent;
    }

    .triangle3 {
      top: 100px;
      left: 0;
      border-width: 100px 100vw 0 0;
      border-color: #008378 transparent transparent transparent;
    }
  </style>
</MainLayout>


