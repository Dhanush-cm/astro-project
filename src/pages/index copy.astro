---
// Import the components
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import AwardCard from "../components/AwardCard.astro";
---

<Header />

<main style="text-align: center; padding: 40px;">
  <h2>Trellix is recognized as an industry leader by key analyst firms</h2>
  <div class="awards-container">
    <AwardCard 
      title="Leader in GigaOm Radar for Extended Detection and Response (XDR)"
      description="Leader in GigaOm Radar for Extended Detection and Response (XDR)"
      imageSrc="/images/award1.png" />
    
    <AwardCard 
      title="Trellix Endpoint Security Stops 100% of Threats in Leading Industry Test"
      description="100% threat prevention in the industry test by SE Labs."
      imageSrc="/images/award2.png" />
    
    <AwardCard 
      title="Network Detection and Response (NDR): Publisher’s Choice Award"
      description="Winner of the Cyber Defense Magazine Global InfoSec Awards."
      imageSrc="/images/award3.png" />
    
    <AwardCard 
      title="Innovation leader in the Frost Radar: Email Security, 2024"
      description="Leader in the Frost Radar for Email Security, 2024."
      imageSrc="/images/award4.png" />
    
    <AwardCard 
      title="#1 Leading Solution with Gold Medal in the 2023 Info-Tech Data Quadrant for DLP"
      description="Gold Medal awarded by Software Reviews."
      imageSrc="/images/award5.png" />
  </div>

  <a href="#" class="view-more">View all Awards and Recognitions →</a>
</main>

<Footer />

<style>
  main {
    max-width: 1200px;
    margin: auto;
  }

  .awards-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 20px;
    margin-top: 40px;
  }

  .view-more {
    display: inline-block;
    margin-top: 20px;
    color: #0073e6;
    font-weight: bold;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .view-more:hover {
    color: #005bb5;
  }
</style>
