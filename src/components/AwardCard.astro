---
// AwardCard component to display individual awards
export interface Props {
  title: string;
  description: string;
  imageSrc: string;
}

const { title, description, imageSrc } = Astro.props;
---
<div class="card">
  <img src={imageSrc} alt={title} class="award-image" />
  <h3>{title}</h3>
  <p>{description}</p>
</div>

<style>
  .card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
    background-color: #ffffff;
  }

  .card:hover {
    transform: scale(1.05);
  }

  .award-image {
    width: 100px;
    height: auto;
    margin-bottom: 15px;
  }

  h3 {
    font-size: 1.2rem;
    margin: 10px 0;
  }

  p {
    font-size: 0.9rem;
    color: #666;
  }
</style>
